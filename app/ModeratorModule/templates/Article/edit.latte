{block content}
    <div class="row">
        <h1 n:block="title">Editace článku</h1>
        {form editArticleForm, class => 'form-horizontal'}
            <ul class="errors" n:if="$form->hasErrors()">
                <li n:foreach="$form->errors as $error">{$error}</li>
            </ul>
            <div class="form-group">
                {label headline, class => 'control-label'/}
                {input headline, class => 'form-control'}
            </div>

            <div class="form-group">
                {input content, id =>'mce-id', class => 'form-control h-300'}
            </div>

            <div class="form-group">
                <div class="text-right">
                    {label state, class => 'control-label'/}
                    {foreach $form[state]->items as $key => $label}
                        <div class="radio-inline">
                            <label n:name="state:$key"><input n:name="state:$key"> {$label}</label>
                        </div>
                    {/foreach}
                </div>
            </div>

            <div class="form-group">
                <div class="text-right">
                    {input submit class => 'btn btn-default'}
                </div>
            </div>
        {/form}
    </div>

    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>
        $(document).ready(function(){
            tinymce.init({
                selector: '#mce-id',
                language_url : '/assets/js/tinymce/languages/cs_CZ.js'  // site absolute URL
            });
        });
    </script>
{/block}